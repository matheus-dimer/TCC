<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('head'); %>
</head>

<body>
    <%- include('header'); %>
        <div class="container">

            <h3>PERSONAGENS</h3>

            <div class="table-responsive">
                <table class="table table-dark table-hover w-100 d-block d-md-table">
                    <thead>
                        <tr>
                            <th scope="col">PERSONAGEM</th>
                            <th scope="col">RAÇA</th>
                            <th scope="col">CLASSE</th>
                            <th scope="col">ALINHAMENTO</th>
                            <th scope="col">ANTECEDENTE</th>
                            <th scope="col">NÍVEL</th>
                            <th scope="col">AÇÕES</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% personagemJogador.forEach(function(dados){ %>
                        <tr>
                            <th scope="row"><a href="/ficha/<%=dados.id_ficha %>">
                                <span><%= dados.personagem %></span>
                            </a>
                        </th>
                            <td><%= dados.raca %></td>
                            <td><%= dados.classe %></td>
                            <td><%= dados.alinhamento %></td>
                            <td><%= dados.antecedente %></td>
                            <td><%= dados.nivel %></td>
                            <td>
                                <a href="/delete/<%=dados.id_ficha %>" class="btn-delete"><span class="bi bi-x-lg"
                                        style="color: #E5264B"></span></a>

                            </td>
                        </tr>
                    <%})%>
                    </tbody>
                </table>
            </div>

            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#novoPersonagem"> <i
                    class="bi bi-plus-circle"></i> NOVO PERSONAGEM</button>

            <div class="modal fade" id="novoPersonagem" tabindex="-1" aria-labelledby="personagemLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content bg-dark text-white">
                        <div class="modal-header">
                            <h5 class="modal-title" id="personagemLabel">CRIAR NOVO PERSONAGEM</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" action="" name="form">
                            <div class="modal-body">


                                <div class="form-group">
                                    <label>NOME DO PERSONAGEM</label>
                                    <input type="text" class="form-control" name="nomeChar">
                                </div>
                                <div class="form-group">
                                    <label for="racaChar">RAÇA</label>
                                    <input type="text" class="form-control" name="racaChar">
                                </div>
                                <div class="form-group">
                                    <label for="antChar">CLASSE</label>
                                    <input type="text" class="form-control" name="classChar">
                                </div>
                                <div class="form-group">
                                    <label for="alinChar">ALINHAMENTO</label>
                                    <input type="text" class="form-control" name="alinChar">
                                </div>
                                <div class="form-group">
                                    <label for="antChar">ANTECEDENTE</label>
                                    <input type="text" class="form-control" name="antChar">
                                </div>
                                <div class="form-group">
                                    <label for="nivChar">NIVEL</label>
                                    <input type="number" class="form-control" name="nivChar" min="0" max="99">
                                </div>

                            </div>
                            <div class="modal-footer">
                                <input type="submit" class="btn btn-danger" value="Criar">
                        </form>
                    </div>

                </div>
            </div>
        </div>

</body>

</html>